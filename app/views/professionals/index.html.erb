<h1>Professionals</h1>

<div id="professionals">

<table>
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Specialty</th>
      </tr>
    </thead>

    <tbody>
      <% @professionals.each do |professional| %>
      <tr>
        <%= render professional %>
        <td><%= link_to "Show this professional", professional %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New professional", new_professional_path %>
