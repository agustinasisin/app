<p style="color: green"><%= notice %></p>

<h1>Patients</h1>

<div id="patients">
  <table>
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Document</th>
        <th>Phone Number</th>
        <th>Email</th>
        <th>Birthday</th>
      </tr>
    </thead>

    <tbody>
      <% @patients.each do |patient| %>
      <tr>
        <%= render patient %>
        <td><%= link_to "Show this patient", patient %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>

<%= link_to "New patient", new_patient_path %>
